<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:outlineAmbientShadowColor">@color/colorPrimary</item>
        <item name="android:outlineSpotShadowColor">@color/colorPrimary</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/button_primary_color_selector</item>
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="cornerRadius">22dp</item>
    </style>
</resources>